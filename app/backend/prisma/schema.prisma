datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Event {
  id        Int      @default(autoincrement()) @id
  type      String   // イベントタイプ（connecting, message, complete）
  message   String   // イベントメッセージ
  data      String?  // JSONデータ（任意）
  timestamp DateTime @default(now())
}